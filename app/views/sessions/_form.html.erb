<div class= "center">
  <h1 class="sign_up"> Log In</h1>
  <%= form_tag sessions_path do %>
    <div class="form-group">
      <div class="col-md-6">
        <%= label_tag :email, "Email" ,class: "user_save"  %><br />
        <%= text_field_tag :email , params[:email],  required: true, class: "form-control" ,
          placeholder: "Enter Your Email"%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-6">
        <%= label_tag :password, "Password", class:"but_password_save" %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= password_field_tag :password, params[:password],  required: true, class: "form-control",
          placeholder: "Enter Your Password"  %>
      </div>
    </div>
    <div class="but_data_save2 "><button type="submit" class="btn btn-primary col-md-3">Login</button></div>
  <% end %>
</div>
