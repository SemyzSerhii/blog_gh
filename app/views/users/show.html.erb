<div class="card shadow-sm dist_posts_show" style="border-radius: 0;
  margin: 0; margin-top: 9px; width: 100%; height: 335px; position: relative; border: 0 " >
  <%= image_tag 'standart_user_fon.jpg',
    alt: 'Image', target: '_blank',
    style: 'width: 100%; height: 100%' %>
  <div style="position: absolute; z-index: 1">
    <% if @user.cover.present? %>
      <%= image_tag @user.cover.url.url, alt: 'Image', class: 'card-img-top', target: '_blank',
        style: 'width: 200px; height: 200px; margin-left: 2rem; margin-top: 11rem; border-radius: 100%;
      border: 5px  solid white; box-shadow: 1.5px 12px 17px -7px #000000;' %>
    <% else %>
      <%= image_tag 'avatar_user.png', alt: 'Image', class: 'card-img-top',
        target: '_blank', style: 'width: 200px; height: 200px; margin-left: 2rem; margin-top: 11rem;
        border: 5px  solid white; box-shadow: 1.5px 12px 17px -7px #000000; border-radius: 100%;'%>
    <% end %>
  </div>
  <h2 class="card-text"
      style="text-align: center; position: absolute; z-index: 1; margin-left: 16rem; margin-top: 14rem; color: darkgray" >
    <%= @user.username %>
  </h2>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="position: relative; box-shadow: 6px 12px 17px -7px #000000;">
  <div class="collapse navbar-collapse" id="navbarNav" style=" margin-left: 400px; ">
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to t('views.user.show.links.my_posts'), user_posts_path(@user), class:"btn btn-sm btn-outline-secondary",
          style: 'color:black; border-radius: 1rem; margin-left: 10px; margin-bottom: 5px; background-color: #f9f9f9'%>
      </li>
      <li class="nav-item">
        <%= link_to t('views.user.show.links.options'), edit_user_path(@user), class:"btn btn-sm btn-outline-secondary",
          style: 'color:black; border-radius: 1rem; margin-left: 10px; margin-bottom: 5px; background-color: #f9f9f9;'%>
      </li>
    </ul>
  </div>
</nav>


