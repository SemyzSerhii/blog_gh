<div class="card" style="width: 30rem; border-radius: 1.5rem">
  <% if user.cover.present? %>
    <%= image_tag user.cover.url.url, alt: 'Image', class: 'card-img-top', target: '_blank',
      style: ' padding-left: 5%; padding-right: 5%; height: 420px; padding-top: 5%; border-radius: 1.5rem' %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= user.username %></h5>
  </div>
  <div class="btn-group">
    <%= link_to t('views.post._post.links.open'),  user_path(user), class:"btn btn-sm btn-outline-secondary", style: 'color:black; border-radius: 1rem'%>
  </div>
</div>

