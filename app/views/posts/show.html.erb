<div class="card shadow-sm raz dist_posts_show" style="border-radius: 0.25rem" >
  <% if @post.cover.present? %>
    <%= image_tag @post.cover.url.url, alt: 'Image', class: 'card-img-top', target: '_blank',
      style: ' padding-left: 5%; padding-right: 5%; height: 720px' %><% else %>
    <%= image_tag 'https://png.pngtree.com/thumb_back/fw800/back_pic/04/60/75/35586d07a8ef5a6.jpg',
      alt: 'Image', class: 'card-img-top photo_post', target: '_blank' %>
  <% end %>
  <div class="open_post_user">
    <% if @post.user.cover.present? %>
      <%= image_tag @post.user.cover.url.url, alt: 'Image', class: 'photo_user', target: '_blank',  style: 'float: left' %>
    <% else %>
      <%= image_tag 'https://www.exactax.com/track/img/hr.png', alt: 'Image', class: 'photo_user',
        target: '_blank', style: 'float: left'%>
    <% end %>
    <p class="card-text" style="margin-top: -1.25rem; margin-right: 12.5rem" >
      <%= @post.user.username %>
    </p>
  </div>
  <h2 class="card-text open_post_title">
    <%= @post.title %>
  </h2>
  <div class="card-body">
    <p class="card-text" style="font-size: 1rem; text-align: left; padding: 2rem "><%= @post.body %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <% if user_signed_in? && @post.user == current_user%>
          <%= link_to t('views.post.show.links.destroy'), post_path(@post), method: :delete, confir: 'Are you sure?',
            class:"btn btn-sm btn-outline-secondary", style: 'color:black; border-radius: 1rem'%>
          <%= link_to t('views.post.show.links.edit'), edit_post_path(@post), class:"btn btn-sm btn-outline-secondary",
            style: 'color:black; border-radius: 1rem'%>
        <%end %>
      </div>
    </div>
  </div>
</div>
<div>
  <%= render 'comments/form', post: @post%>
  <div id="comments">
    <%= render @post.comments%>
  </div>
</div>
