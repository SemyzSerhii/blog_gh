<div class="dist_posts raz photo"
     style="border-radius:1.25rem; width: 400px; height: 400px; float: left;
       box-shadow: 9px 12px 42px 7px #000000; flex-direction: column; word-wrap: break-word;">
  <div class="photo">
   <% if post.cover.present? %>
    <%= image_tag post.cover.url.url, alt: 'Image', class: 'card-img-top', target: '_blank',
      style: 'width: 100%; height: 192%; border-top-left-radius: 1.25rem;
      border-top-right-radius: 1.25rem; border-bottom-left-radius: 1.25rem; border-bottom-right-radius: 1.25rem' %>
      <% else %>
      <%= image_tag 'https://ae01.alicdn.com/kf/HTB1zNW9OFXXXXamaXXXq6xXFXXXw/228344903/HTB1zNW9OFXXXXamaXXXq6xXFXXXw.jpg',
        alt: 'Image', class: 'card-img-top', target: '_blank',
        style: 'width: 100%; height: 192%; border-top-left-radius: 1.25rem;
      border-top-right-radius: 1.25rem; border-bottom-left-radius: 1.25rem; border-bottom-right-radius: 1.25rem' %>
  <% end %>
  </div>
  <div class="card-body">
    <h2 class="card-text" style="font-size: 1.25rem; height: 24px; color: white"><%= post.title %></h2>
    <p class="card-text"
       style="font-size: 1rem; text-align: left; height: 72px; color: white"><%= post.body[0..100] %></p>
    <div class="d-flex justify-content-between align-items-center">
      <div class="btn-group">
        <%= link_to t('views.post._post.links.open'), post, class:"btn btn-sm btn-outline-secondary",
          style: 'color:white; border-color: white; border-radius: 1rem'%>
      </div>
          <p class="card-text" style="font-size: 1.25rem;  text-align: right; padding-right: 1rem; color: white">
            <%= post.user.username %>
          </p>
    </div>
  </div>
</div>
