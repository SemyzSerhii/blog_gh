<div class="container">
  <%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, required: true, class: 'form-control' %>
      <small id="titleHelp" class="form-text text-danger">
        <%= @post.errors[:title].join(', ') %>
      </small>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, size: '60x12', required: true, class: 'form-control' %>
      <small id="bodyHelp" class="form-text text-danger">
        <%= @post.errors[:body].join(', ') %>
      </small>
      <%= f.submit t('views.post._form.submit.save'), class: 'btn btn-success' %>
  <%end %>
  </div>
</div>